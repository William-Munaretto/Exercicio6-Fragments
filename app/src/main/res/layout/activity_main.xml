<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/margem"
    tools:context=".MainActivity">

    <fragment
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/fragment_buttons"
        android:name="com.example.exericio6_fragments.LeftFragment"
        android:layout_marginRight="@dimen/margem"
        tools:layout="@layout/fragment_left"/>

    <fragment
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.example.exericio6_fragments.RightFragment"
        android:id="@+id/fragment_view"
        tools:layout="@layout/fragment_right"
        />


</LinearLayout>